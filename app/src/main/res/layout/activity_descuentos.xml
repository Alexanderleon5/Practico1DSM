<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcula tus descuentos de ley"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="100dp"/>

    <EditText
        android:id="@+id/etNombreEmpleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del empleado"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etSalarioBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Salario base"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCalcularSalario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Salario"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvResultadoSalario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:text="Resultado aparecerá aquí"/>

</LinearLayout>